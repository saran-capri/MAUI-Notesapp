<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFirstMauiApp.Views.WelcomePage"
             Shell.NavBarIsVisible="False"
             NavigationPage.HasNavigationBar="False">

    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0.3,1">
            <GradientStop Color="#4F46E5" Offset="0.0"/>
            <GradientStop Color="#3730A3" Offset="1.0"/>
        </LinearGradientBrush>
    </ContentPage.Background>

    <Grid>

        <!-- Decorative circles -->
        <Ellipse WidthRequest="340" HeightRequest="340"
                 HorizontalOptions="End" VerticalOptions="Start"
                 TranslationX="120" TranslationY="-80"
                 Fill="#FFFFFF" Opacity="0.05"/>

        <Ellipse WidthRequest="200" HeightRequest="200"
                 HorizontalOptions="Start" VerticalOptions="End"
                 TranslationX="-60" TranslationY="60"
                 Fill="#FFFFFF" Opacity="0.05"/>

        <!-- Center content -->
        <VerticalStackLayout x:Name="ContentStack"
                             VerticalOptions="Center"
                             HorizontalOptions="Center"
                             Spacing="0">

            <!-- Pencil icon in white circle -->
            <Border x:Name="IconBorder"
                    WidthRequest="110" HeightRequest="110"
                    StrokeShape="Ellipse"
                    BackgroundColor="#FFFFFF1A"
                    Stroke="#FFFFFF40"
                    StrokeThickness="2"
                    HorizontalOptions="Center"
                    Opacity="0">
                <Label Text="✏️"
                       FontSize="52"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"/>
            </Border>

            <!-- "Welcome to" label -->
            <Label x:Name="WelcomeLabel"
                   Text="Welcome to"
                   TextColor="#FFFFFFCC"
                   FontSize="16"
                   FontFamily="OpenSansRegular"
                   HorizontalOptions="Center"
                   Margin="0,28,0,4"
                   Opacity="0"/>

            <!-- App name -->
            <Label x:Name="AppNameLabel"
                   Text="Notes"
                   TextColor="White"
                   FontSize="48"
                   FontFamily="OpenSansSemibold"
                   HorizontalOptions="Center"
                   CharacterSpacing="2"
                   Opacity="0"/>

            <!-- Tagline -->
            <Label x:Name="TaglineLabel"
                   Text="Your thoughts, beautifully organized."
                   TextColor="#FFFFFFAA"
                   FontSize="14"
                   FontFamily="OpenSansRegular"
                   HorizontalOptions="Center"
                   Margin="0,12,0,0"
                   Opacity="0"/>

        </VerticalStackLayout>

        <!-- Loading indicator at bottom -->
        <ActivityIndicator x:Name="Loader"
                           IsRunning="True"
                           Color="#FFFFFF80"
                           VerticalOptions="End"
                           HorizontalOptions="Center"
                           Margin="0,0,0,60"
                           Opacity="0"/>

    </Grid>
</ContentPage>
